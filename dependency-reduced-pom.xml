<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.lyokofirelyte</groupId>
  <artifactId>ElyBridge</artifactId>
  <name>ElyBridge</name>
  <version>1.0</version>
  <url>com.github.lyokofirelyte.ElyBridge</url>
  <developers>
    <developer>
      <id>Hugh_Jasses</id>
    </developer>
  </developers>
  <build>
    <sourceDirectory>bridge</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <finalName>${project.artifactId}</finalName>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>com.github.lyokofirelyte.ElyBridge.ElyBridge</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>com.github.lyokofirelyte:CB</artifact>
                  <excludes>
                    <exclude>org/bukkit/**</exclude>
                    <exclude>org/yaml/**</exclude>
                    <exclude>org/sqlite/**</exclude>
                    <exclude>org/json/**</exclude>
                    <exclude>javax/**</exclude>
                    <exclude>com/dom4j/**</exclude>
                    <exclude>com/dsh105/**</exclude>
                    <exclude>com/sk89q/**</exclude>
                    <exclude>com/mysql/**</exclude>
                    <exclude>com/avaje/**</exclude>
                    <exclude>com/github/lyokofirelyte/Spectral/**</exclude>
                    <exclude>xml-apis/xml-apis/**</exclude>
                    <exclude>net/minecraft/**</exclude>
                    <exclude>me/confuser/**</exclude>
                    <exclude>com/mojang/**</exclude>
                    <exclude>io/netty/**</exclude>
                    <exclude>native/**</exclude>
                    <exclude>configurations/**</exclude>
                    <exclude>mojang-translations/**</exclude>
                    <exclude>net/md_5/**</exclude>
                    <exclude>org/spigotmc/**</exclude>
                    <exclude>assets/minecraft/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <excludes>
              <exclude>me.confuser:*</exclude>
              <exclude>com.github.lyokofirelyte:Spectral:*</exclude>
            </excludes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.16.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>mvn-repo</id>
      <url>file://${project.build.directory}/mvn-repo</url>
    </repository>
  </distributionManagement>
  <properties>
    <github.global.server>github</github.global.server>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

